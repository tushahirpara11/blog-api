<!------ Include the above in your HEAD tag ---------->
<br />
<%if (success) {%>
<div class="alert alert-success" role="alert">
  <%= success%>
</div>
<%}%>
<div class="container">
  <div class="col-lg-12">
    <% let flag =0; for (let i = 0; i < post.length; i++) {%>
<form method="post" action="/post/like">
  <div style="border:1px solid gray; border-radius: 5px;padding: 20px;" class="panel panel-default">
    <div class="panel-body">
      <section class="post-heading">
        <div class="row">
          <div class="col-md-11">
            <div class="media">
              <div class="media-body">
                <h4 class="media-heading"><em><%= post[i].title%></em>
                  <div style="color: grey; float: right;">
                    <em><%= post[i].uid%></em>
                    <input type="hidden" name="pid" value="<%= post[i]._id%>" />
                    <input type="hidden" name="uid" value="<%= post[i].uid%>" />
                  </div>
                </h4>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="post-body">
        <p><%= post[i].discription%></p>
      </section>
      <section class="post-footer">
        <hr />
        <div class="post-footer-option container">
          <ul class="list-unstyled">
            <%like.some((ele) => {
              if(ele.pid == post[i]._id && ele.status == 1 ) {
                flag = 1;                                
            }});
            if(flag == 1) {%>
            <button id="btnLike" type="submit"><i class="fa fa-thumbs-up" style="font-size: 30px;color: blue;"></i>
              Like</button>
            <% flag =0;} else {%>
            <button id="btndisLike" type="submit"><i class="fa fa-thumbs-up" style="font-size: 30px;color: gray;"></i>
              Like</button>
            <%}%>
          </ul>
        </div>
      </section>
    </div>
  </div>
</form>
<br />
<%}%>
        </div>
    </div>