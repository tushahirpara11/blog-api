<%- include ('nav.ejs') %>
<% if (msg) {%>
<div class="alert alert-danger" role="alert">
  <%= msg%>
</div>
<%}%>
<span class="container margin-30">
  <form method="POST" class="form-handle" action="/post/user">
    <div>
      <h1 style="text-align: center;">Add Post</h1>
      <hr><br />
      <span class="success"><%= msg %></span><br /> <br />
<div class="form-group col-lg-6 margin-30">
  <input type="text" id="title" name="title" class="form-control" placeholder="Enter Post Title" />
</div>
<div class="form-group col-lg-6">
  <textarea id="discription" name="discription" class="form-control" placeholder="Enter Discription"></textarea>
</div>
<div class="form-group" style="margin-left: 5%;">
  <input type="submit" value="Add Post" class="btn btn-info col-lg-2" onclick="return checkValidateData();"
    style="margin:2% 2%  2% 0;" />
  <button class="btn btn-danger col-lg-2" type="reset">CANCEL</button>
</div>
</div>
</form>
</div>
<script type="text/javascript">
  function checkValidateData() {
    let postTitle = document.getElementById('postTitle').value;
    let discription = document.getElementById('discription').value;
    if (postTitle && discription) {
      return true;
    } else {
      alert('Field should not be null');
      return false;
    }
  }
</script>
</body>

</html>