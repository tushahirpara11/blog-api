<% if (msg) {%>
<div class="alert alert-danger" role="alert">
  <%= msg%>
</div>
<%}%>
<span class="container margin-30">
  <form id="addpost" method="POST" class="form-handle" action="/users/<%=email%>/post">
<div>
  <h1 style="text-align: center;">Add Post</h1>
  <hr><br />
  <div class="form-group col-lg-6 margin-30">
    <input type="text" id="title" name="title" class="form-control" placeholder="Enter Post Title" />
  </div>
  <div class="form-group col-lg-6">
    <textarea id="discription" name="discription" class="form-control" placeholder="Enter Discription"></textarea>
  </div>
  <div class="form-group" style="margin-left: 5%;">
    <input type="submit" value="Add Post" class="btn btn-info col-lg-2" style="margin:2% 2%  2% 0;" />
    <button class="btn btn-danger col-lg-2" type="reset">CANCEL</button>
  </div>
</div>
</form>
</div>
<script>
  $(document).ready(function () {
    $("#addpost").submit(function (e) {
      let title = $("#title").val();
      let discription = $("#discription").val();

      $(".error").remove();

      if (title.length < 1 || title == "") {
        e.preventDefault();
        $("#title").after(
          '<span class="error">This field is required</span>'
        );
      }
      if (discription == "") {
        e.preventDefault();
        $("#discription").after(
          '<span class="error">This field is required</span>'
        );
      }
    });
    e.preventDefault();
  });
</script>